<p id="notice"><%= notice %></p>
<h1>Spēlētāji</h1>

<table id="players">
    <thead>
        <tr>
            <th>Vārds Uzvārds</th>
            <th>Numurs</th>
            <th>Pozīcija</th>
            <th>Klubs</th>
            <th>Valsts</th>

        </tr>
    </thead>
    <tbody>
        <%#ruby code goes in to the <%%>
        <% @players.each do |player| %>

            <tr data-player-id="<%= player.id %>">
                <td data-player-attribute="name"><%= link_to player.name, player_path(player), method: :show %></td>
                <td data-player-attribute="number"><%= player.number %></td>
                <td data-player-attribute="position"><%= player.position %></td>
                <td data-player-attribute="club"><%= player.club %></td>
                <td data-player-attribute="team"><%= player.team.title %></td>
                <td><%= link_to 'labot', edit_player_path(player) %></td>  
                <td><%= link_to 'dzēst', player_path(player), method: :delete, 
                data: { confirm: 'Vai esat drošs, ka vēlaties dzēst ierakstu?'} %></td>
            </tr>

        <% end %>
    </tbody>

</table>

<%= link_to 'Jauns spēlētājs', new_player_path %>  
