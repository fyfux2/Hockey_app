<p id="notice"><%= notice %></p>
<h1>Komandas</h1>

<table>
    <thead>
        <tr>
            <th>Nosaukums</th>
            <th>Apzīmējums</th>
        </tr>
    </thead>
    <tbody>
        <%#ruby code goes in to the <%%>
        <% @teams.each do |team| %>

            <tr>
                <td><%= link_to team.title, team_path(team), method: :show %></td>
                <td><%= team.code %></td>
                <td><%= link_to 'labot', edit_team_path(team) %></td>  
                <td><%= link_to 'dzēst', team_path(team), method: :delete, data: { confirm: 'Vai esat drošs, ka vēlaties dzēst ierakstu?'} %></td>

            </tr>

        <% end %>
    </tbody>

</table>

<%= link_to 'Jauna komanda', new_team_path %>  

